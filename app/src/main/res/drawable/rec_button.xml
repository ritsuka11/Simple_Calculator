<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d99578"/> <!-- Background color when pressed -->
            <corners android:radius="4dp"/> <!-- Corner radius in dp -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ddd"/> <!-- Default background color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>